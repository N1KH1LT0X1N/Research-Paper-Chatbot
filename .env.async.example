# Research Paper Chatbot - Async Version
# Copy this to .env and fill in your credentials

# ================================
# Required: Twilio WhatsApp API
# ================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ================================
# Required: Google Gemini AI
# ================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
TEMPERATURE=0.5

# ================================
# Database Configuration
# ================================
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./whatsapp_bot_async.db

# For production (PostgreSQL):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/research_bot

# For Docker:
# DATABASE_URL=postgresql+asyncpg://research_user:changeme@postgres:5432/research_bot

# PostgreSQL password (for Docker)
POSTGRES_PASSWORD=changeme

# ================================
# Redis Configuration
# ================================
# For local development:
REDIS_URL=redis://localhost:6379/0

# For Docker:
# REDIS_URL=redis://redis:6379/0

# ================================
# Optional: OpenAI (for Whisper transcription)
# ================================
# OPENAI_API_KEY=your_openai_api_key_here

# ================================
# Optional: Google Cloud TTS (for voice responses)
# ================================
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ================================
# Server Configuration
# ================================
PORT=8000

# ================================
# Old Database (for migration)
# ================================
OLD_DB_PATH=whatsapp_bot.db

# ================================
# Feature Flags
# ================================
# Enable/disable features
ENABLE_PDF_PROCESSING=true
ENABLE_VOICE_MESSAGES=true
ENABLE_FIGURES=true
ENABLE_CITATIONS=true
ENABLE_RECOMMENDATIONS=true

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_PER_MINUTE=30

# ================================
# Logging
# ================================
LOG_LEVEL=INFO

# ================================
# Monitoring (optional)
# ================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# Development Settings
# ================================
DEBUG=false
RELOAD=false
